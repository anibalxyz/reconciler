{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@*": ["./src/*"],
      "@common/*": ["../common/*"],
      "@components/*": ["./src/components/*"],
      "@icons/*": ["./src/components/icons/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@pages/*": ["./src/pages/*"]
    },
    "jsx": "react-jsx"
  },

  "include": ["./src/**/*"],
  "exclude": ["node_modules/", "dist/"]
}
